    script(src="js/ExperienceWidgetController.js", async)
    script(src="js/DropdownWidgetController.js", async)
    script(src="js/PersonalData.js", async)

    script(id="sertificat-template" type="text/x-handlebars-template")
      .sertificat(data-id="{{{id}}}")
        a.b-thumb__preview__pic(href="#link-to-big-img")
          img(src="{{{src}}}", alt="Сертификат")
        a.remove(href="#", data-fileapi="file.remove")
        textarea(name="comments", placeholder="Описание…" cols="30", rows="10")

    script(id="education-template" type="text/x-handlebars-template")
      h2.chapter-title: span Образование
      .line
        label(for="city{{{index}}}") Населенный пункт
        input(type="text", autocomplete="off", spellcheck="false", id="city{{{index}}}", name="city[]", value="", placeholder="Начните вводить...")
      .line.name
        label(for="univercity{{{index}}}") Название учебного заведения
        input(type="text", autocomplete="off", spellcheck="false", id="univercity{{{index}}}", name="univercity[]", value="", placeholder="Начните вводить...")
      .line.grad-year
        label(for="grad-year{{{index}}}") Год выпуска
        input(type="text", id="grad-year{{{index}}}", name="grad-year[]", value="")
      .line
        label(for="fac{{{index}}}") Факультет
        input(type="text", id="fac{{{index}}}", name="fac[]", value="")
      .line.spec
        label(for="spec{{{index}}}") Специальность
        input(type="text", id="spec{{{index}}}", name="comments[]", value="")

  body.registration-page
    header
      .wrapper
        a(href="/")
          h1.logotype Ассоциация репетиторов
      
    .registration-step-1
      
      h2.title Регистрация репетитора

      .steps
        .step.selected
          h3.sub-title: span Личные данные
        .step.selected
          h3.sub-title: span Предметы
        .step.selected
          h3.sub-title: span Адреса
        .step.selected
          h3.sub-title: span Образование

      form.panel(action="/save/", method="post", enctype="multipart/form-data")
        fieldset.education
          
          .line
            a.add-education(href="#") Добавить образование

        fieldset.sertificats
          h2.chapter-title: span Дипломы, грамоты, сертификаты
          
          .sertificat-list
            
            //- .sertificat
            //-   a(href="#link-to-big-img")
