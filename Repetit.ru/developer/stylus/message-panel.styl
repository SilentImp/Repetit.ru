html.no-svg body
  .message-panel
    .text
      background url('../img/register/info.png') 0 0 no-repeat
    nav
      .close
        background url('../img/register/close-message.png') 0 0 no-repeat
    
.message-panel
  z-index 20
  position relative
  height 46px
  color #3F3F3F
  font-size 0
  line-height 46px
  white-space nowrap
  padding 0 10px 0 46px
  font-family 'Tahoma', sans-serif
  background #CFF2E1
  display block 
  .text
    line-height 46px
    height 46px
    padding 0 0 0 24px 
    font-size 14px
    overflow hidden
    text-overflow ellipsis
    position relative
    background url('../img/register/info.svg') 0 50% no-repeat
    strong
      font-weight bold
  nav
    float right
    height 46px
    line-height 46px
    text-align right
    .close
      margin 9px 0 9px 16px
      padding 0
      text-align left
      overflow hidden
      width 28px
      height 28px      
      float right
      text-indent -999px
      position relative
      font-size 0
      line-height 0
      background url('../img/register/close-message.svg') 
      opacity 1
      transition opacity .25s
      &:hover
        opacity .6
    .details
      margin 5px 0 5px 16px
      padding 0
      float right
      background #7AB89C
      color #fff  
      font-weight bold
      border-radius 2px
      overflow hidden
      height 36px
      line-height 36px
      font-size 12px
      text-align center
      width 120px
      text-decoration none
      text-transform uppercase
      transition background-color .25s
      &:hover
        background-color darken(#7AB89C, 20%)
  